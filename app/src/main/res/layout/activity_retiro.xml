<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_4"
    tools:context=".RetiroActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="400dp"
        android:layout_height="146dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="560dp"
        android:src="@drawable/grupo_aval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="342dp"
        android:layout_height="100dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="99dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRetiro" />

    <EditText
        android:id="@+id/editTextM"
        android:layout_width="166dp"
        android:layout_height="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="69dp"
        android:ems="10"
        android:hint="Monto"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btnRetiro"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    <Button
        android:id="@+id/btnRetiro"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="69dp"
        android:backgroundTint="#FF3030"
        android:text="Retirar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextM" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="169dp"
        android:layout_height="85dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="170dp"
        android:text="Retirar"
        android:textAlignment="center"
        android:textColor="#F1F3F4"
        android:textSize="38sp"
        app:layout_constraintStart_toEndOf="@+id/editTextM"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="151dp"
        android:layout_height="113dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/av_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>