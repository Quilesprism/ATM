<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="413dp"
        android:layout_height="159dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grupo_aval" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="408dp"
        android:layout_height="71dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeposito"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btnRetiros"
        android:layout_width="202dp"
        android:layout_height="49dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#FF3030"
        android:text="Retiros"
        app:layout_constraintEnd_toStartOf="@+id/btnconsulta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="11dp"
        android:backgroundTint="#FF3030"
        android:text="Salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDeposito"
        app:layout_constraintTop_toBottomOf="@+id/btnRetiros" />

    <Button
        android:id="@+id/btnconsulta"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="#FF3030"
        android:text="Consultas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRetiros"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btnDeposito"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="#FF3030"
        android:text="Depositar saldo"
        app:layout_constraintEnd_toStartOf="@+id/btnTrans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRetiros" />

    <Button
        android:id="@+id/btnTrans"
        android:layout_width="201dp"
        android:layout_height="51dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="46dp"
        android:backgroundTint="#FF3030"
        android:text="Transferencias"
        app:layout_constraintBottom_toTopOf="@+id/btnSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDeposito"
        app:layout_constraintTop_toBottomOf="@+id/btnconsulta" />

</androidx.constraintlayout.widget.ConstraintLayout>