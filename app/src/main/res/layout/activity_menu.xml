<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="413dp"
        android:layout_height="159dp"
        android:layout_marginTop="209dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grupo_aval" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="408dp"
        android:layout_height="71dp"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btnRetiros"
        android:layout_width="202dp"
        android:layout_height="49dp"
        android:layout_marginTop="21dp"
        android:text="Retiros"
        android:backgroundTint="#FF3030"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginTop="136dp"
        android:text="Salir"
        android:backgroundTint="#FF3030"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/btnRetiros" />

    <Button
        android:id="@+id/btnconsulta"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="21dp"
        android:text="Consultas"
        android:backgroundTint="#FF3030"
        app:layout_constraintStart_toEndOf="@+id/btnRetiros"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="38dp"
        android:text="Depositar saldo"
        android:backgroundTint="#FF3030"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRetiros" />

    <Button
        android:id="@+id/button"
        android:layout_width="201dp"
        android:layout_height="51dp"
        android:text="Transferencias"
        android:backgroundTint="#FF3030"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="477dp" />

</androidx.constraintlayout.widget.ConstraintLayout>